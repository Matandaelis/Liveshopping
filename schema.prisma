  @@index([assignedToId])
}

model TodoImage {
  id              String  @id @default(cuid())
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  imagePath       String  @default("")
  altText         String  @default("")
  todos           Todo[]  @relation("Todo_todoImages")
  metadata        Json?
}
